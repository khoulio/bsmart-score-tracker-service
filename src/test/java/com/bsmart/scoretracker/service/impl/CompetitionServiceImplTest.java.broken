package com.bsmart.scoretracker.service.impl;

import com.bsmart.scoretracker.dto.CompetitionDTO;
import com.bsmart.scoretracker.exception.ResourceNotFoundException;
import com.bsmart.scoretracker.model.Competition;
import com.bsmart.scoretracker.repository.PhaseRepository;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.junit.jupiter.api.extension.ExtendWith;
import org.mockito.InjectMocks;
import org.mockito.Mock;
import org.mockito.junit.jupiter.MockitoExtension;

import java.util.Arrays;
import java.util.List;
import java.util.Optional;

import static org.junit.jupiter.api.Assertions.*;
import static org.mockito.ArgumentMatchers.any;
import static org.mockito.Mockito.*;

@ExtendWith(MockitoExtension.class)
class CompetitionServiceImplTest {

    @Mock
    private PhaseRepository competitionRepository;

    @InjectMocks
    private CompetitionServiceImpl competitionService;

    private Competition competition1;
    private Competition competition2;

    @BeforeEach
    void setUp() {
        competition1 = Competition.builder()
            .id(1L)
            .code("LIGUE1")
            .name("Ligue 1")
            .country("France")
            .build();

        competition2 = Competition.builder()
            .id(2L)
            .code("LALIGA")
            .name("La Liga")
            .country("Spain")
            .build();
    }

    @Test
    void testGetAllCompetitions() {
        // Given
        when(competitionRepository.findAll()).thenReturn(Arrays.asList(competition1, competition2));

        // When
        List<CompetitionDTO> result = competitionService.getAllCompetitions();

        // Then
        assertEquals(2, result.size());
        assertEquals("LIGUE1", result.get(0).getCode());
        assertEquals("La Liga", result.get(1).getName());
        verify(competitionRepository).findAll();
    }

    @Test
    void testGetCompetitionById_Success() {
        // Given
        when(competitionRepository.findById(1L)).thenReturn(Optional.of(competition1));

        // When
        CompetitionDTO result = competitionService.getCompetitionById(1L);

        // Then
        assertNotNull(result);
        assertEquals(1L, result.getId());
        assertEquals("LIGUE1", result.getCode());
        assertEquals("Ligue 1", result.getName());
        assertEquals("France", result.getCountry());
        verify(competitionRepository).findById(1L);
    }

    @Test
    void testGetCompetitionById_NotFound() {
        // Given
        when(competitionRepository.findById(999L)).thenReturn(Optional.empty());

        // When & Then
        assertThrows(ResourceNotFoundException.class,
            () -> competitionService.getCompetitionById(999L));
        verify(competitionRepository).findById(999L);
    }

    @Test
    void testCreateCompetition_Success() {
        // Given
        CompetitionDTO dto = CompetitionDTO.builder()
            .code("PREMIERLEAGUE")
            .name("Premier League")
            .country("England")
            .build();

        Phase newPhase = Competition.builder()
            .id(3L)
            .code("PREMIERLEAGUE")
            .name("Premier League")
            .country("England")
            .build();

        when(competitionRepository.save(any(Competition.class))).thenReturn(newPhase);

        // When
        CompetitionDTO result = competitionService.createCompetition(dto);

        // Then
        assertNotNull(result);
        assertEquals(3L, result.getId());
        assertEquals("PREMIERLEAGUE", result.getCode());
        assertEquals("Premier League", result.getName());
        assertEquals("England", result.getCountry());
        verify(competitionRepository).save(any(Competition.class));
    }

    @Test
    void testUpdateCompetition_Success() {
        // Given
        CompetitionDTO dto = CompetitionDTO.builder()
            .code("LIGUE1_UPDATED")
            .name("Ligue 1 Updated")
            .country("France Updated")
            .build();

        when(competitionRepository.findById(1L)).thenReturn(Optional.of(competition1));
        when(competitionRepository.save(any(Competition.class))).thenReturn(competition1);

        // When
        CompetitionDTO result = competitionService.updateCompetition(1L, dto);

        // Then
        assertEquals("LIGUE1_UPDATED", competition1.getCode());
        assertEquals("Ligue 1 Updated", competition1.getName());
        assertEquals("France Updated", competition1.getCountry());
        verify(competitionRepository).findById(1L);
        verify(competitionRepository).save(competition1);
    }

    @Test
    void testUpdateCompetition_NotFound() {
        // Given
        CompetitionDTO dto = CompetitionDTO.builder().build();
        when(competitionRepository.findById(999L)).thenReturn(Optional.empty());

        // When & Then
        assertThrows(ResourceNotFoundException.class,
            () -> competitionService.updateCompetition(999L, dto));
        verify(competitionRepository).findById(999L);
        verify(competitionRepository, never()).save(any());
    }

    @Test
    void testDeleteCompetition_Success() {
        // Given
        when(competitionRepository.existsById(1L)).thenReturn(true);

        // When
        competitionService.deleteCompetition(1L);

        // Then
        verify(competitionRepository).existsById(1L);
        verify(competitionRepository).deleteById(1L);
    }

    @Test
    void testDeleteCompetition_NotFound() {
        // Given
        when(competitionRepository.existsById(999L)).thenReturn(false);

        // When & Then
        assertThrows(ResourceNotFoundException.class,
            () -> competitionService.deleteCompetition(999L));
        verify(competitionRepository).existsById(999L);
        verify(competitionRepository, never()).deleteById(anyLong());
    }
}
